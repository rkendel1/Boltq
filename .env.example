# Deployment used by `npx convex dev`
CONVEX_DEPLOYMENT=<your convex deployment> 

NEXT_PUBLIC_CONVEX_URL=<your convex url>

NEXT_PUBLIC_GOOGLE_CLIENT_ID=<your google client id>

# OpenAI API Key for Next.js features
# Used for: Code generation (AIModel.ts), Conversational AI
# NOT used for: API workflow generation (delegated to Python backend)
OPENAI_API_KEY=<your openai api key>

# Magoc Backend Integration (automagik-tools MCP server)
# The Magoc backend processes OpenAPI specs and provides AI-powered workflow capabilities
# All API workflow generation operations are delegated to this Python backend service
NEXT_PUBLIC_MAGOC_BACKEND_URL=http://localhost:8000
MAGOC_API_KEY=<your magoc api key if required>

# Note: For API workflow generation, the OPENAI_API_KEY should also be configured 
# in the Python backend (see magoc-backend/.env.example)